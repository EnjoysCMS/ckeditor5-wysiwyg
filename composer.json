{
    "name": "enjoyscms/ckeditor5",
    "description": "Wysiwyg CKEditor5 for EnjoysCMS",
    "require": {
        "php": "^8.1",
        "enjoyscms/core": "^6.0@dev"
    },
    "autoload": {
        "psr-4": {
            "EnjoysCMS\\ContentEditor\\CKEditor5\\": "src/",
            "EnjoysCMS\\ContentEditor\\CKEditor5\\Composer\\Scripts\\": "scripts/"
        }
    },
    "scripts": {
        "ckeditor5-assets-install": "EnjoysCMS\\ContentEditor\\CKEditor5\\Composer\\Scripts\\AssetsInstallCommand",
        "post-install-cmd": [
            "echo -e \"\\x1b[1mCKEditor 5\\x1b[00m\"",
            "@ckeditor5-assets-install"
        ],
        "post-update-cmd": [
            "echo -e \"\\x1b[1mCKEditor 5\\x1b[00m\"",
            "@ckeditor5-assets-install"
        ]
    }
}
